{
    "name": "@hedger/vue-plotly",
    "author": {
        "name": "Nicolas Hedger",
        "email": "nicolas@hedger.ch"
    },
    "description": "Plotly for Vue 3 with TypeScript support",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/vue-plotly.umd.js",
    "module": "./dist/vue-plotly.es.js",
    "exports": {
        ".": {
            "import": "./dist/vue-plotly.es.js",
            "require": "./dist/vue-plotly.umd.js"
        }
    },
    "types": "./dist/types/index.d.ts",
    "scripts": {
        "dev": "vite",
        "build": "vite build && vue-tsc --emitDeclarationOnly",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@types/node": "^18.7.6",
        "@types/plotly.js": "^2.12.2",
        "@vitejs/plugin-vue": "^3.0.3",
        "plotly.js-dist": "^2.14.0",
        "typescript": "^4.6.4",
        "vite": "^3.0.7",
        "vue": "^3.2.37",
        "vue-tsc": "^0.39.5"
    },
    "peerDependencies": {
        "plotly.js-dist": "^2.14.0",
        "vue": "^3.2.37"
    }
}
